pipeline {
    agent any
    
    environment {
        ORACLE_CONTAINER = "oracle-db"
        SQLCL_PATH       = "/opt/sqlcl/bin/sql"
        DB_CONN_STR      = "localhost:1521/FREEPDB1" // Internamente en el contenedor es 1521
        
        SONAR_SCANNER_HOME = tool name: 'SonarScanner', type: 'hudson.plugins.sonar.SonarRunnerInstallation'
        SONAR_PROJECT_KEY = "apex-project-${env.BRANCH_NAME}"
        SONAR_PROJECT_NAME = "APEX Project - ${env.BRANCH_NAME}"
    }
    
    triggers {
        githubPush()
    }
    
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        
        stage('SonarQube Analysis') {
            when { branch 'develop' }
            steps {
                script {
                    echo "=== Análisis de Código con SonarQube (Solo Develop) ==="
                    withSonarQubeEnv('SonarQube') {
                        sh """
                            /${SONAR_SCANNER_HOME}/bin/sonar-scanner \
                                -Dsonar.projectKey=${SONAR_PROJECT_KEY} \
                                -Dsonar.projectName="${SONAR_PROJECT_NAME}" \
                                -Dsonar.projectVersion=${BUILD_NUMBER} \
                                -Dsonar.sources=. \
                                -Dsonar.inclusions=**/*.sql,**/*.pks,**/*.pkb,**/*.fnc,**/*.prc,**/*.trg \
                                -Dsonar.exclusions=**/node_modules/**,**/target/**,**/artifact/** \
                                -Dsonar.plsql.file.suffixes=sql,pks,pkb,fnc,prc,trg \
                                -Dsonar.language=plsql \
                                -Dsonar.sourceEncoding=UTF-8 \
                                -Dsonar.working.directory=${WORKSPACE}/sonar-reports
                        """
                    }
                }
            }
        }
        
        stage('Quality Gate') {
            when { branch 'develop' }
            steps {
                script {
                    echo "=== Esperando resultado de Quality Gate (Webhook) ==="
                    timeout(time: 10, unit: 'MINUTES') {
                        def qg = waitForQualityGate()
                        if (qg.status != 'OK') {
                            error "El análisis de calidad no pasó los umbrales: ${qg.status}"
                        } else {
                            echo "Quality Gate PASSED"
                        }
                    }
                }
            }
        }
        
        stage('Generate Artifact') {
            environment {
                DB = credentials('apex-dev-credential')
            }
            steps {
                script {
                    echo "=== Generando Artefacto en contenedor Oracle ==="
                    
                    def genScript = """
                        cd /tmp/apex_project
                        # Actualizar versión de SQLcl usando el propio comando del proyecto
                        ${SQLCL_PATH} /nolog <<EOF
                        cd /tmp/apex_project
                        project config set -name sqlcl.version -value 25.4.0.0
                        exit
EOF
                        
                        # Generar el artefacto (Ejecutamos desde el directorio del proyecto)
                        cd /tmp/apex_project
                        ${SQLCL_PATH} \${DB_USR}/\${DB_PSW}@${DB_CONN_STR} <<EOF
                        project gen-artifact -name app-${BRANCH_NAME} -version ${BUILD_NUMBER}
                        exit
EOF
                    """
                    writeFile file: 'gen_artifact.sh', text: genScript
                    
                    sh "docker exec -u root ${ORACLE_CONTAINER} mkdir -p /tmp/apex_project"
                    sh "docker cp . ${ORACLE_CONTAINER}:/tmp/apex_project/"
                    
                    // Forzamos permisos y propietario para evitar el error de Permission Denied con sed
                    sh "docker exec -u root ${ORACLE_CONTAINER} chown -R root:root /tmp/apex_project"
                    sh "docker exec -u root ${ORACLE_CONTAINER} chmod -R 777 /tmp/apex_project"
                    
                    sh "docker exec -u root -e DB_USR=${DB_USR} -e DB_PSW=${DB_PSW} ${ORACLE_CONTAINER} bash /tmp/apex_project/gen_artifact.sh"
                    
                    sh "mkdir -p artifact"
                    sh "docker cp ${ORACLE_CONTAINER}:/tmp/apex_project/artifact/. artifact/ || echo 'No se pudo copiar el artefacto'"
               }
            }
        }
        
        stage('Deploy to DEV') {
            when { branch 'develop' }
            environment {
                DB = credentials('apex-dev-credential')
            }
            steps {
                script {
                    echo "=== Desplegando a Desarrollo ==="
                    // Buscamos el zip usando sintaxis simple de comillas
                    def artifactFile = sh(script: 'find artifact/ -name "*.zip" | head -1', returnStdout: true).trim()
                    
                    if (!artifactFile) {
                        error "No se encontró ningún archivo .zip en la carpeta artifact/. Abortando deploy."
                    }
                    
                    def deployScript = """
                        cd /tmp/apex_project
                        ${SQLCL_PATH} /nolog <<EOF
                        cd /tmp/apex_project
                        project config set -name sqlcl.version -value 25.4.0.0
                        exit
EOF
                        cd /tmp/apex_project
                        ${SQLCL_PATH} \${DB_USR}/\${DB_PSW}@${DB_CONN_STR} <<EOF
                        project deploy -file /tmp/deploy_app.zip
                        exit
EOF
                    """
                    writeFile file: 'deploy_dev.sh', text: deployScript
                    
                    sh "docker cp ${artifactFile} ${ORACLE_CONTAINER}:/tmp/deploy_app.zip"
                    sh "docker cp deploy_dev.sh ${ORACLE_CONTAINER}:/tmp/apex_project/deploy.sh"
                    
                    // Asegurar permisos antes de ejecutar deploy
                    sh "docker exec -u root ${ORACLE_CONTAINER} chown root:root /tmp/deploy_app.zip /tmp/apex_project/deploy.sh"
                    sh "docker exec -u root -e DB_USR=${DB_USR} -e DB_PSW=${DB_PSW} ${ORACLE_CONTAINER} bash /tmp/apex_project/deploy.sh"
                }
            }
        }

        stage('Deploy to TEST') {
            when { branch 'test' }
            environment {
                DB = credentials('apex-test-credential')
            }
            steps {
                script {
                    echo "=== Desplegando a TEST ==="
                    def artifactFile = sh(script: 'find artifact/ -name "*.zip" | head -1', returnStdout: true).trim()
                    
                    if (!artifactFile) {
                        error "No se encontró ningún archivo .zip en la carpeta artifact/. Abortando deploy."
                    }
                    
                    def deployScript = """
                        cd /tmp/apex_project
                        ${SQLCL_PATH} /nolog <<EOF
                        cd /tmp/apex_project
                        project config set -name sqlcl.version -value 25.4.0.0
                        exit
EOF
                        cd /tmp/apex_project
                        ${SQLCL_PATH} \${DB_USR}/\${DB_PSW}@${DB_CONN_STR} <<EOF
                        DEFINE DEFAULTS_FILE=dist/utils/properties/test.properties
                        project deploy -file /tmp/deploy_app.zip
                        exit
EOF
                    """
                    writeFile file: 'deploy_test.sh', text: deployScript
                    
                    sh "docker cp ${artifactFile} ${ORACLE_CONTAINER}:/tmp/deploy_app.zip"
                    sh "docker cp deploy_test.sh ${ORACLE_CONTAINER}:/tmp/apex_project/deploy.sh"
                    
                    // Asegurar permisos antes de ejecutar deploy
                    sh "docker exec -u root ${ORACLE_CONTAINER} chown root:root /tmp/deploy_app.zip /tmp/apex_project/deploy.sh"
                    sh "docker exec -u root -e DB_USR=${DB_USR} -e DB_PSW=${DB_PSW} ${ORACLE_CONTAINER} bash /tmp/apex_project/deploy.sh"
                }
            }
        }
    }
    
    post {
        success {
            emailext(
                subject: "[OK] Pipeline Exitoso - #${BUILD_NUMBER}",
                body: "El despliegue de la rama ${env.BRANCH_NAME} se completó con éxito.\nLogs: ${env.BUILD_URL}",
                to: "${env.CHANGE_AUTHOR_EMAIL ?: 'sergiolucero73@gmail.com'}",
                mimeType: 'text/plain'
            )
        }
        failure {
            emailext(
                subject: "[FAIL] Pipeline Fallido - #${BUILD_NUMBER}",
                body: "El despliegue de la rama ${env.BRANCH_NAME} ha fallado.\nLogs: ${env.BUILD_URL}console",
                to: "${env.CHANGE_AUTHOR_EMAIL ?: 'sergiolucero73@gmail.com'}",
                mimeType: 'text/plain'
            )
        }
        always {
            script {
                sh "/usr/bin/docker exec -u root ${ORACLE_CONTAINER} rm -rf /tmp/apex_project /tmp/deploy_app.zip || true"
                archiveArtifacts artifacts: 'artifact/*.zip', allowEmptyArchive: true
            }
        }
    }
}